<!-- Layaout central vertical -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".firstapp.FirstAppActivity">
    <!--
     NOTA:
     match_parent: Abarca toda la pantalla que pueda
     wrap_content: Abarca un espacio minimo necesario
     500dp: La unidad de pantalla especifica (ejemplo), se puede ajustar a voluntad


     android:orientation="vertical"
     -->
    <View
        android:id="@+id/viewPurple"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:layout_constraintStart_toEndOf="@+id/viewBlue"
        app:layout_constraintBottom_toTopOf="@+id/viewBlue"
        android:background="@color/purple_200" />

    <View
        android:id="@+id/viewBlue"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

